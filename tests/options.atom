pub fn isSomeOrNone(t) {
    let value = some(1);
    let noValue = nil;

    t.assert(true, value.isSome())
        .assert(false, value.isNone())
        .assert(false, noValue.isSome())
        .assert(true, noValue.isNone());
}

pub fn unwrapOr(t) {
    t.assert(100, nil.unwrapOr(100));
}

pub fn optionsTests() {
    return [
        isSomeOrNone,
        unwrapOr
    ];
}