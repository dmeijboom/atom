fn scoping(t) {
    let local1 = "item1";
    let local2 = "item2";
    let local3 = "item3";
    let mut result = "";

    if true {
        let local4 = "item4";

        if false {
            let local5 = "item5";
        }

        if true {
            let local6 = "item6";
            let local7 = "item7";

            result = f"{local3}{local6}";
        }
    }

    t.assert("item3item6", result);
}

fn assign(t) {
    let mut result = 0;

    result = 10.5;
    result = false;
    result = "hello";

    t.assert("hello", result);
}

fn shadowing(t) {
    let result = 10;

    if true {
        let result = 20;

        if true {
            let result = 30;

            t.assert(30, result);
        }

        t.assert(20, result);
    }

    t.assert(10, result);
}

pub fn localsTests() {
    return [
        scoping,
        assign,
        shadowing
    ];
}