fn literal(t) {
    let result = [10, 20, 30];

    t.assert([10, 20, 30], result)
        .assert(3, result.len())
        .assert(10, result[0])
        .assert(20, result[1])
        .assert(30, result[2]);
}

fn slices(t) {
    let original = [10, 20, 30, 40, 50];
    let copy = original[1..4];
    copy[0] = 100;

    t.assert([100, 30, 40], copy)
        .assert([10, 20, 30, 40, 50], original);
}

pub fn arraysTests() {
    return [
        literal,
        slices
    ];
}