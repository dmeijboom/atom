fn assertInt(t, expected, actual) -> t.assert(expected, actual).assertTrue(actual is Int);
fn assertUint(t, expected, actual) -> t.assert(expected, actual).assertTrue(actual is Uint);

fn literals(t) {
    let result = 42;

    assertInt(t, 42, 42);
    assertInt(t, 2147483648, 2147483648);
}

fn addition(t) {
    assertInt(t, 50, 25 + 25);
    assertInt(t, 2147483649, 1 + 2147483648);
    assertInt(t, 30, 10 + 10 + 10);
}

fn subtraction(t) {
    assertInt(t, 50, 75 - 25);
    assertInt(t, -10, 10 - 20);
    assertInt(t, -2147483647, 1 - 2147483648);
}

fn multiplication(t) {
    assertInt(t, 50, 10 * 5);
    assertInt(t, 1000, 10 * 5 * 20);
    assertInt(t, 4294967296, 2 * 2147483648);
}

fn division(t) {
    assertInt(t, 5, 10 / 2);
    assertInt(t, 25, 150 / 3 / 2);
}

fn pemdas(t) {
    assertInt(t, 9, 2 * (3 + 4) - 5);
    assertInt(t, 25, 7 + 6 * 5 / 2 + 3);
    assertInt(t, 17, 4 / 2 + (4 - 1) * 5);
}

fn comparison(t) {
    t.assertTrue(1.0 == 1)
        .assertTrue(1 == 1.0)
        .assertTrue((Uint)1 == 1)
        .assertFalse(1.1 == 1)
        .assertFalse(1 == 1.1);
}

pub fn intTests() {
    return [
        literals,
        addition,
        subtraction,
        multiplication,
        division,
        pemdas,
        comparison
    ];
}