import os;

pub extern fn repr(value);
pub extern fn typeOf(value);

pub class Array {
    extern fn push(self, item);
    extern fn pop(self);
    extern fn concat(self, other);
    extern fn len(self);
    extern fn cap(self);
}

pub class Str {
    extern fn len(self);
    extern fn upper(self);
    extern fn lower(self);
    extern fn concat(self, other);
    extern fn cptr(self);
}

pub class Package {
}

pub fn println(val) {
    let line;

    if typeOf(val) == "Str" {
        line = val;
    } else {
        line = repr(val);
    }

    line = line ^ "\n";

    os.syscall4(os.platform.SYS_WRITE, os.STDOUT, line.cptr(), line.len());
}
